function Status(Text,Time,Error)
	if getgenv().UnnamedCheat_Status_Bar == false then
		getgenv().UnnamedCheat_Status_Bar = true
		local StatusBar = Instance.new("ScreenGui")
		local StatusScreen = Instance.new("Frame")
		local Status = Instance.new("Frame")
		local StatusInfo = Instance.new("TextLabel")
		local StatusUICorner = Instance.new("UICorner")

		Time = Time or 1.8
		if Error == true then
			Status.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
		else
			Status.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
		end

		syn.protect_gui(StatusBar)
		StatusBar.Name = getgenv().UnnamedCheat_Text_Generator
		StatusBar.DisplayOrder = math.random(100000001,200000002)
		StatusBar.Enabled = true
		StatusBar.OnTopOfCoreBlur = true
		StatusBar.ZIndexBehavior = Enum.ZIndexBehavior.Global
		StatusBar.Parent = game:GetService("CoreGui")

		syn.protect_gui(StatusScreen)
		StatusScreen.Name = getgenv().UnnamedCheat_Text_Generator
		StatusScreen.Active = true
		StatusScreen.Size = UDim2.new(0, 289, 0, 39)
		StatusScreen.Position = UDim2.new(0, -300, 0.13699999451637268, 0)
		StatusScreen.BorderSizePixel = 0
		StatusScreen.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
		StatusScreen.Visible = true
		StatusScreen.Parent = StatusBar

		syn.protect_gui(Status)
		Status.Name = getgenv().UnnamedCheat_Text_Generator
		Status.Active = true
		Status.Size = UDim2.new(0, 6, 0, 39)
		Status.BorderSizePixel = 0
		Status.Visible = true
		Status.Parent = StatusScreen

		syn.protect_gui(StatusInfo)
		StatusInfo.Name = getgenv().UnnamedCheat_Text_Generator
		StatusInfo.TextWrapped = true
		StatusInfo.Active = true
		StatusInfo.BorderSizePixel = 0
		StatusInfo.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
		StatusInfo.Size = UDim2.new(0, 280, 0, 39)
		StatusInfo.TextSize = 18
		StatusInfo.Text = Text
		StatusInfo.TextColor3 = Color3.fromRGB(255, 255, 255)
		StatusInfo.Font = Enum.Font.SourceSans
		StatusInfo.Position = UDim2.new(0.027099676430225372, 0, 0, 0)
		StatusInfo.BackgroundTransparency = 1
		StatusInfo.Visible = true
		StatusInfo.Parent = StatusScreen

		syn.protect_gui(StatusUICorner)
		StatusUICorner.Name = getgenv().UnnamedCheat_Text_Generator
		StatusUICorner.CornerRadius = UDim.new(0, 4)
		StatusUICorner.Parent = StatusScreen

		StatusScreen:TweenPosition(UDim2.new(0, 0, 0.13699999451637268, 0),"InOut","Quart",1,true)
		wait(Time)
		StatusScreen:TweenPosition(UDim2.new(0, -300, 0.13699999451637268, 0),"InOut","Quart",1,true)
		wait(1.8)
		StatusBar:Destroy()	
		getgenv().UnnamedCheat_Status_Bar = false
	end 
end
